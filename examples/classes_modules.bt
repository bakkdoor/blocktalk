  def method_a = do
    Console puts: "in ModuleA#method_a!"
  end
end


Module >> :ModuleB do
  def method_b = do
    Console puts: "in ModuleB#method_b!"
  end

  def method_c = do |param and: param2 plus: param3|
    Console puts: "in ModuleB#method_c: #{param}, #{param2}, #{param3}"
  end
end

